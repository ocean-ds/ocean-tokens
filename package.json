{
  "name": "@pagnet/tokens",
  "version": "1.0.0",
  "private": false,
  "description": "A design tokens project",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "preandroid": "node android/pre-script.js",
    "web": "theo src/tokens.yml  --transform web --format scss,module.js --dest dist",
    "android": "theo src/tokens.yml --setup android/android-formats.js --transform android --format blu.android.xml --dest dist --resolveMetaAliases"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Blu Pagamentos <devs@useblu.com.br>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pagnet/design-tokens.git"
  },
  "keywords": [
    "design-tokens",
    "theo",
    "design-system"
  ],
  "bugs": {
    "url": "https://github.com/Pagnet/design-tokens/issues"
  },
  "homepage": "https://github.com/Pagnet/design-tokens#readme",
  "devDependencies": {
    "husky": "^4.2.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "theo": "^8.1.5"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
