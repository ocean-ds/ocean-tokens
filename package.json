{
  "name": "@useblu/tokens",
  "version": "1.0.0-alpha",
  "private": false,
  "description": "A design tokens project",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "preandroid": "node scripts/android/pre-script.js",
    "build:web": "theo src/tokens.yml --transform web --format scss,module.js,json --dest dist",
    "build:android": "theo src/tokens.yml --setup scripts/android/android-formats.js --transform android --format blu.android.xml --dest dist --resolveMetaAliases",
    "build:docs": "gulp docs --gulpfile scripts/gulpfile.js",
    "deploy:docs": "gh-pages -d dist/docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Blu Pagamentos <devs@useblu.com.br>",
  "repository": "git+https://github.com/Pagnet/design-tokens.git",
  "keywords": [
    "design-tokens",
    "theo",
    "design-system"
  ],
  "bugs": {
    "url": "https://github.com/Pagnet/design-tokens/issues"
  },
  "homepage": "https://pagnet.github.io/design-tokens/",
  "devDependencies": {
    "gh-pages": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-dom": "^1.0.0",
    "gulp-load-plugins": "^2.0.3",
    "gulp-rename": "^2.0.0",
    "gulp-theo": "^2.0.1",
    "husky": "^4.2.0",
    "optimist": "^0.6.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "theo": "^8.1.5"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "GPL-3.0"
}
