    "pretty-quick": "^3.1.0",
    "theo": "^8.1.5",
    "through2": "^4.0.2",
    "vinyl": "^2.2.1"
  },
  "engines": {
    "node": ">=12.8.0",
    "yarn": ">=1.22.0"
